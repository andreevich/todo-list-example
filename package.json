{
  "name": "todo-list",
  "version": "1.0.0",
  "description": "Простое приложение для управления списком задач",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev:server": "nodemon server/index.js",
    "dev:client": "cd client && npx serve -s .",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "init-db": "node server/db/init.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1",
    "serve": "^14.2.0"
  }
}
